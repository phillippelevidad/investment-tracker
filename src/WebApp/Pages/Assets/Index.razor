@page "/assets"
@inject HttpClient Http

<h3>Assets</h3>

@if (assets == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Asset</th>
                <th>Broker</th>
                <th>Category</th>
                <th>Currency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asset in assets)
            {
                <tr>
                    <td>@asset.Name</td>
                    <td>@asset.Broker</td>
                    <td>@asset.Category</td>
                    <td>@asset.Currency</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Asset[] assets;

    protected override async Task OnInitializedAsync()
    {
        assets = await Http.GetFromJsonAsync<Asset[]>("api/assets");
    }

    public record Asset(
        Guid Id, string Name, string Broker, string Category, string Currency);
}
